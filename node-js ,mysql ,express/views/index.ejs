<!DOCTYPE html>
<html>
<head>
  <title>Posts</title>
</head>
<body>
    <%- include('navigate') %>
  <h1>Posts <%= dataSession %></h1>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Edit</th>
    </tr>
    <% posts.forEach(function(post) { %>
    <tr>
      <td><%= post.post_id %></td>
      <td><%= post.post_title %></td>
      <td><%= post.post_content %></td>
      <td><a href="/editPost?postId=<%= post.post_id %>">Edit</a></td>
    </tr>
    <% }); %>
  </table>
</body>
</html>
